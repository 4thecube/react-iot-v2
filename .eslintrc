{
    "extends": [
        "react-app",
        "react-app/jest"
    ],
    "rules": {
        "no-console": "error",
        "quotes": ["error", "single"],
        "jsx-quotes": ["error", "prefer-double"],
        "prefer-const": "warn",
        "indent": ["warn", 2],
        "max-len": ["error", {"code": 140}],
        "semi": "error",
        "import/order": ["error", {
            "groups": ["builtin", "external", "internal", "parent", "sibling", "index", "object"],
            "newlines-between": "always-and-inside-groups"
        }]
    }
}